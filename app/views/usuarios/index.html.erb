<h1>Usuários</h1>

<table class="table table-hover">
  <tr>
    <th>Nome</th>
    <th>Cpf</th>
    <th>Senha</th>
    <th>Email</th>
    <th colspan="3">Ações</th>
	<th>Comentarios</th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nome %></td>
    <td><%= usuario.cpf %></td>
    <td><%= usuario.senha %></td>
    <td><%= usuario.email %></td>
    <td><%= link_to 'Show', usuario %></td>
    <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% cont = usuario.comentarios.count %>
		<% if (cont==0) %>
			<td><%= 'Nenhum comentario' %></td>
		<% else %>
			<td>
			<% i = 0 %>
				<% while (i < cont) %>
						<%= link_to usuario.comentarios.map(&:titulo)[i], 'comentarios/' + usuario.comentarios.map(&:usuario_id)[i].to_s + '/edit' %>
						<br>
				<% i=i+1 %>
				<% end %>
			</td>
		<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Usuário', new_usuario_path %>
