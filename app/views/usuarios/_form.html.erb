<%= form_for(@usuario, :html => {:class => "form-horizontal"  }) do |f| %>
<div class="control-group">
  <% if @usuario.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <h2><%= pluralize(@usuario.errors.count, "erros") %> Os seguintes erros foram encontrados:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome, "Nome: ", :class => "control-label" %><br />
    <div class="controls">
    <%= f.text_field :nome %>
    </div>
  </div>
  <div class="field">
    <%= f.label :cpf, "CPF: ", :class => "control-label" %><br />
    <div class="controls">
    <%= f.number_field :cpf %>
    </div>
  </div>
  <div class="field">
    <%= f.label :senha, "Senha: ", :class => "control-label" %><br />
    <div class="controls">
    <%= f.text_field :senha %>
    </div>
  </div>
  <div class="field">
    <%= f.label :email, "Email: ", :class => "control-label" %><br />
    <div class="controls">
    <%= f.text_field :email %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Cadastrar", :class => "btn btn-primary" %>
  </div>
</div>
<% end %>
